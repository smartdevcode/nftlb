table netdev nftlb {
	map tcp-services {
		type ipv4_addr . inet_service : verdict
		elements = { 192.168.1.22 . http : goto lb01 }
	}

	map udp-services6 {
		type ipv6_addr . inet_service : verdict
		elements = { 2001:db8:0:1:1:1:1:1 . http : goto lb02 }
	}

	chain ingress {
		type filter hook ingress device lo priority 0; policy accept;
		meta protocol ip ip daddr . tcp dport vmap @tcp-services
		meta protocol ip6 ip6 daddr . udp dport vmap @udp-services6
	}

	chain lb01 {
		ether saddr 01:01:01:01:01:01 ether daddr set jhash ip saddr mod 10 map { 0-4 : 02:02:02:02:02:02, 5-9 : 03:03:03:03:03:03 } fwd to "lo"
	}

	chain lb02 {
		ether saddr 01:01:01:01:01:04 ether daddr set numgen random mod 10 map { 0-4 : 02:02:02:02:02:02, 5-9 : 03:03:03:03:03:03 } fwd to "lo"
	}
}
