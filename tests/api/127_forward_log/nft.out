table ip nftlb {
	map nat-tcp-services {
		type ipv4_addr . inet_service : verdict
		elements = { 10.20.10.50 . 25 : goto nat-Ex-SMTP }
	}

	map tcp-services-back {
		type ipv4_addr . inet_service : ipv4_addr
	}

	map tcp-services-back-m {
		type mark : ipv4_addr
		elements = { 0x00000203 : 10.20.10.50 }
	}

	map filter-tcp-services {
		type ipv4_addr . inet_service : verdict
		elements = { 10.20.10.50 . 25 : goto filter-Ex-SMTP }
	}

	map forward-tcp-services {
		type mark : verdict
		elements = { 0x00000203 : goto forward-Ex-SMTP }
	}

	chain prerouting {
		type nat hook prerouting priority filter; policy accept;
		ip daddr . tcp dport vmap @nat-tcp-services
	}

	chain postrouting {
		type nat hook postrouting priority srcnat; policy accept;
		ct mark 0x80000000/1 masquerade
		snat to ip daddr . tcp dport map @tcp-services-back
		snat to ct mark map @tcp-services-back-m
	}

	chain filter {
		type filter hook prerouting priority mangle; policy accept;
		meta mark set ct mark
		ip daddr . tcp dport vmap @filter-tcp-services
	}

	chain filter-Ex-SMTP {
		ct state new ct mark 0x00000000 ct mark set numgen random mod 5 map { 0-4 : 0x00000203 }
	}

	chain nat-Ex-SMTP {
		ip protocol tcp ct mark 0x00000203 dnat to 10.20.10.28:25
	}

	chain forward {
		type filter hook forward priority filter; policy accept;
		ct mark vmap @forward-tcp-services
	}

	chain forward-Ex-SMTP {
		log prefix "FWD-Ex-SMTP "
	}
}
